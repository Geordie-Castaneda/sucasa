<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_special_sucasa" xml:space="preserve">

  <t t-name="OrderReceipt_replace" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
    <xpath expr="//*[@class='pos-receipt']" position="attributes">
        <attribute name="style">
            position: relative; left: 1.2em; font-size: 150%; zoom: 90%;
        </attribute>
    </xpath>
    <xpath expr="//div[hasclass('pos-receipt')]" position="replace">
      <br/>

      <div class="pos-receipt" style="position: relative; left: 1.2em; font-size: 150%; zoom: 90%;">
        <style>
          .texto-justificado{
          text-align: justify;
          }
          .celda{
          height:auto;
          width:100%
          }
        </style>
        <t t-if="receipt.company.logo">
          <img class="pos-receipt-logo" t-att-src="receipt.company.logo" alt="Logo"/>
            <br /><br />
            <div class="pos-receipt-contact">

                <h2 class="pos-receipt-center-align">
                    <t t-esc="receipt.company.name" />
                </h2>
                <t t-if="receipt.company.phone">
                    <div>Tel:<t t-esc="receipt.company.phone" /></div>
                </t>
                <t t-if="receipt.company.vat">
                    <div><t t-esc="receipt.company.vat_label"/>:<t t-esc="receipt.company.vat" /></div>
                </t>
                <t t-if="receipt.company.email">
                    <div><t t-esc="receipt.company.email" /></div>
                </t>
                <t t-if="receipt.company.website">
                    <div><t t-esc="receipt.company.website" /></div>
                </t>
                <t t-if="receipt.header_html">
                    <t t-raw="receipt.header_html" />
                </t>
                <t t-if="!receipt.header_html and receipt.header">
                    <div style="white-space:pre-line"><t t-esc="receipt.header" /></div>
                </t>

            </div>
            <br /><br />   
            
            

            
          <table style="width:100%">
            <tr>
                <td></td>
                <td colspan='2' align="right">
                    <span t-esc='receipt.date.localestring'/>
                </td>
            </tr>
              
            <tr>
                <td>Cajero</td>
                <td align="right"><t t-esc="receipt.cashier" /></td>
            </tr>
              
            <tr>
                <td>Turno #</td>
                <td align="right"><span t-esc="env.pos.pos_session.name"/></td>
            </tr>
              
            <tr>
                <td>Folio</td>
                <td align="right"><span t-esc="receipt.name" /></td>
            </tr>   

            

          </table>
            
            <br/>
            <table style="width:100%">
                <tr>
                    <td>CANT.</td>
                    <td style="text-align:center;">DESCRIPCIÓN</td>
                    <td>PRECIO</td>
                    <td>IMPORTE</td>
                </tr>
                
                <tr>
                    <td colspan="4">
                        <hr style="border:1px dotted gray; width:100%"/>
                    </td>
                </tr>
                
                <tr t-foreach="receipt.orderlines" t-as="l">
                    <td align="center">
                        <span t-esc="l.quantity"></span>
                    </td>
                    
                    <td align="left" style="height:auto; word-break: break-all">
                        <span t-esc="l.product_name_wrapped[0]"/>
                        <span t-esc="l.barcode"/>
                    </td>
                    
                    <td align="right">
                        <span t-esc="env.pos.format_currency(l.price)"/>
                    </td>
                    
                    <td align="right">
                        <span t-esc="env.pos.format_currency(l.price * l.quantity)"/>
                    </td>
                </tr>
                
                <tr style="height:15px;">
                    <td></td>
                </tr>
                
                <tr>
                    <td colspan="2">NO. DE ARTICULOS:</td>
                    <td colspan="2">
                        <t t-if="state.cantidad_productos">
                            <td style="text-align:left">
                              <span t-esc="state.cantidad_productos"/>
                            </td>                          
                        </t>
                    </td>
                </tr>
                
            </table>
            
            <br/>
            
            <table style="width:100%">

                <t t-if="state.transaccion_id">
                  <tr>
                    <td>
                      Transacción:
                    </td>
                    <td>
                      <span t-esc="state.transaccion_id"/>
                    </td>
                  </tr>
                </t>

                <t t-if="state.provider_authorizacion">
                  <tr style="height:25px;">
                    <td>
                      Autorización:
                    </td>
                    <td style="word-break: break-all">
                      <span t-esc="state.provider_authorizacion"/>
                    </td>
                  </tr>
                </t>

                <t t-if="state.reference1">
                  <tr style="height:25px;">
                    <td>
                      Referencia 1:
                    </td>
                    <td>
                      <span t-esc="state.reference1"/>
                    </td>
                  </tr>
                </t>

                <t t-if="state.reference2">
                  <tr style="height:25px;">
                    <td>
                      Referencia 2:
                    </td>
                    <td>
                      <span t-esc="state.reference2"/>
                    </td>
                  </tr>
                </t>


                <t t-if="state.reference3">
                  <tr style="height:25px;">
                    <td>
                      Referencia 3:
                    </td>
                    <td style="height:auto; word-break: break-all">
                      <span t-esc="state.reference3"/>
                    </td>
                  </tr>
                </t>

                <t t-if="state.comision">
                  <tr style="height:25px;">
                    <td>
                      Comisión:
                    </td>
                    <td>
                      <span t-esc="state.comision"/>
                    </td>
                  </tr>
                </t>
                <t t-if="state.iva_comision">
                  <tr style="height:25px;">
                    <td>
                      IVA comisión:
                    </td>
                    <td>
                      <span t-esc="state.iva_comision"/>
                    </td>
                  </tr>
                </t>

                <t t-if="state.legal_info">
                  <tr style="height:auto">
                    <td colspan="2" class="texto-justificado">
                      <span t-esc="state.legal_info"/>
                    </td>
                  </tr>
                </t>
                
                <tr style="height:15px;">
                  <td>
                  </td>
                </tr>
                
                
            </table>
            <br/>
            
            <table style="width:100%">
                <tr style="height:25px; ">
                  <td style="text-align:right; width:205px">
                    TOTAL:
                  </td>
                  <td style="text-align:right">
                    <span t-esc="env.pos.format_currency(receipt.total_rounded)"/>
                  </td>
                </tr>
                
                <tr t-foreach="receipt.paymentlines" t-as="linee" t-key="linee.cid">
                    <td style="text-align:right">
                        <span t-esc="linee.name">  </span>
                    </td>
                    <td style="text-align:right">
                        <span t-esc="env.pos.format_currency(linee.amount)"/>
                    </td>
                </tr>
                
                <tr style="height:25px;">
                  <td style="text-align:right">
                    SU CAMBIO:
                  </td>
                  <td style="text-align:right">
                    <span t-esc="env.pos.format_currency(receipt.change)"/>
                  </td>
                </tr>
            </table>
            <br/>
            
            <div class="pos-receipt-contact">
                <span style="text-align:center; width:100%">GRACIAS POR SU COMPRA <br/>
                SU CASA SIEMPRE MÁS AHORRO</span>
            </div>
            
            
        </t>

      </div>
    </xpath>

  </t>

</templates>
